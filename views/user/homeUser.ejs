                                    <div class="main-product-tab-area">
                                        <div class="tab-menu mb-25">
                                            <div class="section-ttitle">
                                                <h2>Tất cả sản phẩm</h2>
                                            </div> 
                                        </div>
                                        <!-- Tab Contetn Start -->
                                        <div class="tab-content">                                       
                                            <!-- #beauty End Here -->
                                            <div id="electronics2" class="tab-pane fade show active">
