                                                                        <p><span class="price">$<%=item.price%></span></p>
                                                                    </div>
                                                                    <div class="pro-actions">
                                                                        <div class="actions-primary">
                                                                            <a href="#quick-view" onclick="showAddCart2('<%=item._id%>')" title="Add to Cart"> +
                                                                                Thêm vào giỏ</a>
                                                                        </div>
                                                                        
                                                                    </div>
                                                                </div>
                                                                <!-- Product Content End -->
                                                            </div>
                                                            <!-- Single Product End -->
                                                            
