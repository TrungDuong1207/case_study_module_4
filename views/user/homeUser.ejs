                <div class="row">
                    <!-- Product sidebar Start -->
                    <div class="col-lg-3">
                        <div class="sidebar">
                            <div class="side-pro-box mt-30">
                                <h3 class="sidebar-title mb-30">Tìm kiếm nhiều nhất</h3>
                                <div class="side-product-active owl-carousel">
                                    <!-- Side Item Start -->
                                    <div class="side-pro-item">
                                        <% productSearchMost.forEach(item=> { %>
                                            <!-- Single Product Start -->
                                            <div class="single-product single-product-sidebar">
                                                <!-- Product Image Start -->
                                                <div class="pro-img">
                                                    <a href="product.html">
                                                        <img class="primary-img" src="/image/upload/<%=item.image%>"
                                                            alt="single-product">
                                                    </a>
                                                </div>
                                                <!-- Product Image End -->
                                                <!-- Product Content Start -->
                                                <div class="pro-content">
                                                    <div class="pro-info">
                                                        <h4><a href="product.html">
                                                                <%=item.name%>
                                                            </a></h4>
                                                        <p><span class="price">$<%=item.price%></span></p>
                                                    </div>
                                                    <div class="pro-actions">
                                                        <div class="actions-primary">
                                                            <a href="#quick-view"
                                                                onclick="showAddCart2('<%=item._id%>')"
                                                                title="Add to Cart"> + Thêm vào giỏ hàng</a>
                                                        </div>
                                                    </div>
                                                </div>
                                                <!-- Product Content End -->
                                            </div>
                                            <!-- Single Product End -->
                                            <%})%>
                                                <!-- Product Content End -->
                                    </div>
                                    <!-- Single Product End -->
                                </div>
                                <!-- Side Item End -->
                            </div>
                        </div>
