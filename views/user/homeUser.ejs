                    <!-- Like Product Activation Start Here -->
                    <div class="like-pro-active owl-carousel">
                        <!-- Single Product Start -->
                        <% productsTrend.forEach((item)=>{ %>
                            <div class="single-product">
                                <!-- Product Image Start -->
                                <div class="pro-img">
                                    <a href="product.html">
                                        <img class="primary-img" src="/image/upload/<%=item.image%>"
                                            alt="single-product">

                                    </a>
                                    <a href="#" class="quick_view" data-toggle="modal" data-target="#myModal"
                                        title="Quick View"><i class="lnr lnr-magnifier"></i></a>
                                </div>
                                <!-- Product Image End -->
                                <!-- Product Content Start -->
                                <div class="pro-content">
                                    <div class="pro-info">
                                        <h4><a href="product.html">
                                                <%=item.name%>
                                            </a></h4>
                                        <p><span class="price">$<%=item.price%></span></p>
                                    </div>
                                    <div class="pro-actions">
                                        <div class="actions-primary">
                                            <a href="#quick-view" onclick="showAddCart2('<%=item._id%>')"
                                                title="Add to Cart"> + Thêm vào giỏ hàng</a>
                                        </div>
                                    </div>
                                </div>
                                <!-- Product Content End -->
                            </div>
                            <!-- Single Product End -->
                            <%})%>
                    </div>
                    <!-- Like Product Activation End Here -->
                </div>
                <!-- main-product-tab-area-->
            </div>
            <!-- Container End -->
