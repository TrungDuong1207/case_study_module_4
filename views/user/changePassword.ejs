    <!-- Main Wrapper Start Here -->
    <div class="wrapper">
         <!-- Main Header Area Start Here -->
         <header>
             <%- include ('../navigationBar/header')%>
         </header>
             <!-- Header Bottom End Here -->
          <!-- Breadcrumb Start -->
        <div class="breadcrumb-area mt-30">
            <div class="container">
                <div class="breadcrumb">
                    <ul class="d-flex align-items-center">
                        <li><a href="/user/home">Trang chủ</a></li>
                        <li class="active"><a href="user/changePassword">Đổi mật khẩu</a></li>
                    </ul>
                </div>
            </div>
            <!-- Container End -->
        </div>
        <!-- Breadcrumb End -->
       <!-- Register Account Start -->
        <div class="register-account ptb-100 ptb-sm-60">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="register-title">
                            <h3 class="mb-10">ĐỔI MẬT KHẨU</h3>
                        </div>
                    </div>
                </div>
                <!-- Row End -->
                <div class="row">
                    <div class="col-sm-12">
                        <form class="form-register" name="register" action="/user/changePassword" method="post">
                            <fieldset>
                                <legend>Vui lòng nhập các thông tin sau: </legend>
                                <div class="form-group d-md-flex align-items-md-center">
                                    <label class="control-label col-md-2" for="password"><span class="require">*</span>Mật khẩu hiện tại:</label>
                                    <div class="col-md-5">
                                            <input type="password" class="form-control" placeholder="Mật khẩu" minlength="5" maxlength="40" required>
                                    </div>
                                    <label class="control-label col-md-5" id="checkPassword" style="text-align: left; color: orange;"></label>
                                </div>
                                <div class="form-group d-md-flex align-items-md-center">
                                    <label class="control-label col-md-2" for="password"><span class="require">*</span>email:</label>
                                    <div class="col-md-5">
                                        <input type="text" class="form-control" placeholder="Mật khẩu" name="email" minlength="5" maxlength="40" required>
                                    </div>
                                    <label class="control-label col-md-5" id="checkPassword" style="text-align: left; color: orange;"></label>
                                </div>
                                <div class="form-group d-md-flex align-items-md-center">
                                    <label class="control-label col-md-2" for="password3"><span class="require">*</span>Mật khẩu mới:</label>
                                    <div class="col-md-5">
                                            <input type="password"  class="form-control" name="password" oninput="check()"
                                            id="password" placeholder="Mật khẩu mới" minlength="5" maxlength="40" >
                                    </div>
                                    <label class="control-label col-md-5" id="checkPassword3" style="text-align: left; color: orange;"></label>
                                </div>
                                <div class="form-group d-md-flex align-items-md-center">
                                    <label class="control-label col-md-2" for="password2"><span class="require">*</span>Nhập lại mật khẩu</label>
                                    <div class="col-md-5">
                                        <input type="password" oninput="check()" class="form-control"
                                               id="password1" placeholder="Nhập lại mật khẩu" minlength="10" maxlength="40" >
                                    </div>
                                    <label class="control-label col-md-5" id="retypePassword" style="text-align: left; color: orange;"></label>
                                </div>
                                <p id="wrongPass"></p>
                            </fieldset>
                            <div class="terms">
                                <div class="float-md-center">
                                    <button id = "button" type="submit" class="return-customer-btn">XÁC NHẬN</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- Row End -->
            </div>
            <!-- Container End -->
        </div>
        <!-- Register Account End -->
        <!-- Footer Area Start Here -->
        <footer class="off-white-bg2 pt-95 bdr-top pt-sm-55">
            <%- include ('../navigationBar/footer')%>
