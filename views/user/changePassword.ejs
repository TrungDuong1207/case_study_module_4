    <script src="/js/user/main.js"></script>
<script>

        function check() {
        let pass1 = document.getElementById('password').value;
        let pass2 = document.getElementById('password1').value;
        let button = document.getElementById('button');
        let input = document.getElementById('wrongPass');
        if (pass1 == pass2) {
        button.disabled = false;
        input.innerHTML = <p class="text-success">Mật khẩu thích hợp</p>;
    } else {
        button.disabled = true;
        input.innerHTML = <p class="text-danger">Mật khẩu không trùng nhau</p>
    }
    }
</script>

