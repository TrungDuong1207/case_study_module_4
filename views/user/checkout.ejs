    <!-- Main Wrapper Start Here -->
    <div class="wrapper">
         <!-- Main Header Area Start Here -->
         <header>
             <%- include ('../navigationBar/header')%>
         </header>
             <!-- Header Bottom End Here -->
        <!-- Breadcrumb Start -->
        <div class="breadcrumb-area mt-30">
            <div class="container">
                <div class="breadcrumb">
                    <ul class="d-flex align-items-center">
                        <li><a href="/user/home">Trang chủ</a></li>
                        <li><a href="/user/cart">Giỏ hàng</a></li>
                        <li class="active"><a href="#">thanh toán</a></li>
                    </ul>
                </div>
            </div>
            <!-- Container End -->
        </div>
        <!-- Breadcrumb End -->
        
        <!-- checkout-area start -->
        <div class="checkout-area pb-100 pt-15 pb-sm-60">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-6">
                        <div class="checkbox-form mb-sm-40">
                            <h3>Chi tiết hóa đơn</h3>
                        <form action="/user/checkout" method="post">    
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="country-select clearfix mb-30">
                                        <label>Tỉnh/Thành Phố<span class="required">*</span></label>
                                        <select class="wide" name="city">
                                            <option value="HCM">Hồ Chí Minh</option>
                                            <option value="HN">Hà Nội</option>
                                            <option value="ĐN">Đồng Nai</option>
                                            <option value="BD">Bình Dương</option>
                                            <option value="NĐ">Nam Định</option>
                                            <option value="CM">Cà Mau</option>
                                            <option value="ĐN">Đà Nẵng</option>
                                            <option value="TH">Thanh Hóa</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-12" style="margin-bottom: 30px;">
                                    <div class="checkout-form-list mb-sm-30">
                                        <label>Tên<span class="required">*</span></label>
                                        <input type="text" value="<%=user.name%>" placeholder="Nhập họ tên" readonly />
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="checkout-form-list mb-30">
                                        <label>Địa chỉ<span class="required">*</span></label>
                                        <input type="text" name="address" placeholder="Địa chỉ giao hàng" required/>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="checkout-form-list mb-30">
                                        <label>Số điện thoại<span class="required">*</span></label>
                                        <input type="text" name="phone" placeholder="số điện thoại" />
                                    </div>
                                </div>
                                <div class="order-notes col-md-12">
                                    <div class="checkout-form-list">
                                        <label>Ghi chú</label>
                                        <textarea id="checkout-mess" name="note" cols="30" rows="10" placeholder="Ghi chú dành cho cửa hàng."></textarea>
                                    </div>
                                </div> 
                                <button type="submit" class="btn btn-info mt-3" style="margin-left: 13px;">ĐẶT HÀNG</button>
                            </div>
                        </form>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="your-order">
                            <h3>Đơn hàng của bạn</h3>
                            <div class="your-order-table table-responsive">
                                <table>
                                    <thead>
                                        <tr>
                                            <th class="product-name" style="font-weight: bold;">Sản phẩm</th>
                                            <th class="product-total" style="font-weight: bold;">Tổng tiền</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% let sum = 0;%>
                                        <%if(carts){%>
                                        <%carts.items.forEach((item)=>{%>
                                            <% sum += (item.product.price*item.quantity);%>
                                            <tr class="cart_item">
                                                <td class="product-name">
                                                    <%=item.product.name%> <span class="product-quantity"> ×<%=item.quantity%></span>
                                                </td>
                                                <td class="product-total">
                                                    <span class="amount">$<%=item.product.price*item.quantity%></span>
                                                </td>
                                            </tr>
                                        <%})%>
                                        <%}%>
                                        
                                    </tbody>
                                    <tfoot>
                                        <tr class="order-total">
                                            <th>TỔNG CỘNG</th>
                                            <td><span class=" total amount">$<%=sum%></span>
                                            </td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- checkout-area end -->
</div>
        <!-- Footer Area Start Here -->
        <footer class="off-white-bg2 pt-95 bdr-top pt-sm-55">
            <%- include ('../navigationBar/footer')%>
        </footer>
        <!-- Footer Area End Here -->
    </div>
    <!-- Main Wrapper End Here -->

